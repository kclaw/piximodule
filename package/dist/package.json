{
  "name": "pixi-module",
  "version": "1.0.0-beta.1",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "packagr": "ng-packagr -p ng-package.json && cp -r dist package && cd package && npm pack .",
    "compodoc": "./node_modules/.bin/compodoc -p ./tsconfig.json && npm run merge-compodoc",
    "prettier": "prettier --config .prettierrc --write \"src/app/**/*{.ts,.js,.json,.css,.scss}\"",
    "typedoc": "mkdir typedoc && typedoc --module commonjs --out ./typedoc ./src && npm run merge-typedoc",
    "merge-compodoc": "mkdir -p ./docs/documentation && cp -r ./documentation ./docs/documentation && npm run clear-documentation",
    "merge-typedoc": "mkdir -p ./docs/typedoc && cp -r ./typedoc ./docs/typedoc && npm run clear-typedoc",
    "clear-documentation": "[ -e documentation ] && rm -r ./documentation || true",
    "clear-typedoc": "[ -e typedoc ] && rm -r ./typedoc || true",
    "clear-docs": "[ -e docs ] && rm -r ./docs || true",
    "clear-all": "npm run clear-typedoc && npm run clear-docs && npm run clear-docs",
    "build": "npm run clear-all && npm run prettier && npm run compodoc && npm run typedoc && npm run packagr && ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "bootstrap": "^4.0.0",
    "core-js": "^2.4.1",
    "pixi.js": "^4.7.0",
    "rxjs": "^5.5.6",
    "zone.js": "^0.8.19",
    "tslib": "^1.7.1"
  },
  "devDependencies": {
    "@angular/cli": "1.6.7",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@compodoc/compodoc": "^1.0.7",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "@types/pixi.js": "^4.7.0",
    "codelyzer": "^4.0.1",
    "jasmine-core": "~2.8.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ng-packagr": "^2.1.0",
    "prettier": "1.10.2",
    "protractor": "~5.1.2",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typedoc": "^0.10.0",
    "typescript": "~2.5.3"
  },
  "main": "bundles/pixi-module.umd.js",
  "module": "esm5/pixi-module.js",
  "es2015": "esm2015/pixi-module.js",
  "typings": "pixi-module.d.ts",
  "metadata": "pixi-module.metadata.json"
}
